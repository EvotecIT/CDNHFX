{
  "version": 8,
  "name": "Hfx High Contrast",
  "metadata": {
    "hfx:a11y": "high-contrast"
  },
  "sources": {
    "composite": {
      "type": "vector",
      "url": "mapbox://mapbox.mapbox-streets-v8"
    }
  },
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#ffffff" }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "composite",
      "source-layer": "landuse",
      "paint": { "fill-color": "#f3f4f6" }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "composite",
      "source-layer": "water",
      "paint": { "fill-color": "#111827" }
    },
    {
      "id": "road-major",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": ["==", "class", "motorway"],
      "paint": { "line-color": "#000000", "line-width": 2.4 }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "paint": { "line-color": "#111827", "line-width": 1.2 }
    },
    {
      "id": "admin-boundary",
      "type": "line",
      "source": "composite",
      "source-layer": "admin",
      "filter": ["==", "admin_level", 2],
      "paint": { "line-color": "#111827", "line-width": 1 }
    },
    {
      "id": "place-label",
      "type": "symbol",
      "source": "composite",
      "source-layer": "place_label",
      "layout": {
        "text-field": ["get", "name_en"],
        "text-font": ["Open Sans Semibold", "Arial Unicode MS Bold"],
        "text-size": 12
      },
      "paint": {
        "text-color": "#111827",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "road-label",
      "type": "symbol",
      "source": "composite",
      "source-layer": "road_label",
      "layout": {
        "text-field": ["get", "name_en"],
        "text-font": ["Open Sans Regular", "Arial Unicode MS Regular"],
        "text-size": 11
      },
      "paint": {
        "text-color": "#111827",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.2
      }
    }
  ]
}
